{{#unless section.isDelimiter}}
  {{ui-backend/row/input title='Title' value=section.pageTitle}}
  {{ui-backend/row/input title='Menu title' value=section.menuTitle placeholder='Optional'}}
{{/unless}}

{{yield}}

{{ui-backend/row/checkbox title=(ui-join section.modelScreenName 'is visible in menu' delimiter=' ') value=section.visible}}

{{#unless section.isDelimiter}}
  {{ui-backend/row/checkbox
      title=(ui-join section.modelScreenName 'subsections in menu are always expanded' delimiter=' ')
      value=section.open
      disabled=section.isLink
  }}
{{/unless}}
