{{#if model}}

  {{screen-backend-sections-section-edit
      model=model
      save=attrs.save
      cancel=(action 'cancel')}}

{{else}}

  {{ui-backend-header title='Choose new section type'}}

  {{#ui-backend-block class='compact'}}
    {{#each backend.sectionModels as |model|}}
      {{#ui-backend-row action=(action 'select' model.name)}}
        {{model.title}}
        <span class="small">{{model.description}}</span>
      {{/ui-backend-row}}
    {{/each}}
  {{/ui-backend-block}}

  {{#ui-backend-block}}
    {{#ui-backend-row}}
      {{ui-backend-button title='Cancel' action=attrs.cancel}}
    {{/ui-backend-row}}
  {{/ui-backend-block}}

{{/if}}
