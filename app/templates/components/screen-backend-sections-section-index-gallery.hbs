{{#ui-backend-block}}
  {{#if section.images.isLoaded}}
    {{#each section.images as |image|}}
      {{#ui-backend-row}}
        <div><img src={{image.attachments.original.url}}/></div>
        <div>{{image.filename}}</div>
      {{/ui-backend-row}}
    {{else}}
      {{#ui-backend-row}}
        No images added
      {{/ui-backend-row}}
    {{/each}}
  {{else}}
    {{#ui-backend-row}}
      Loading imagesâ€¦
    {{/ui-backend-row}}
  {{/if}}
{{/ui-backend-block}}

{{#ui-backend-section-actions edit=attrs.edit delete=attrs.delete}}
  {{ui-backend-button title='Upload images' action=(action 'upload')}}
{{/ui-backend-section-actions}}
