{{ui-backend-header title=(if model.isNew 'New placeholder' 'Edit placeholder')}}

{{#ui-backend-block}}
  {{ui-backend-row-input title='Slug' value=model.slug}}
  {{ui-backend-row-input title='Title' value=model.title}}
  {{ui-backend-row-textarea title='Body' value=model.body}}
  {{ui-backend-row-checkbox title='Visible' value=model.visible}}
  {{#ui-backend-row}}
    {{ui-backend-button title='Save' action=attrs.save}}
    {{#if model.isNew}}
      {{ui-backend-button title='Cancel' action=attrs.cancel}}
    {{/if}}
  {{/ui-backend-row}}

{{/ui-backend-block}}
