{{ui-backend-header title=(if section.isNew 'New link' 'Edit link')}}

{{#ui-backend-block}}
  {{ui-backend-row-input title='Title' value=section.title}}
  {{ui-backend-row-input title='URL' value=section.url}}
  {{ui-backend-row-checkbox title='Page opens in new tab' value=section.tab}}
  {{ui-backend-row-checkbox title='Link is visible' value=section.visible}}
  {{#ui-backend-row}}
    {{ui-backend-button title='Save' action=(action 'save')}}
    {{#if section.isNew}}
      {{ui-backend-button title='Cancel' action=(action 'cancel')}}
    {{/if}}
  {{/ui-backend-row}}

{{/ui-backend-block}}
