{{#if section.images.isLoading}}
  <div class="message">Loadingâ€¦</div>
{{else if section.images.isError}}
  <div class="message">Sorry, images failed to load</div>
{{else if section.images.isLoaded}}
  {{#if section.images.length}}
    <div class="navigation">
      <div class="item icon" {{action 'prev'}}>{{fa-icon 'chevron-left'}}</div>
      <div class="item index">{{selectedImageIndex.index}} / {{selectedImageIndex.length}}</div>
      <div class="item icon" {{action 'next'}}>{{fa-icon 'chevron-right'}}</div>
    </div>
    {{#with selectedImage as |image|}}
      <div class="image" {{action 'next'}}>
        <div class="image">{{frontend-image src=image.attachments.original.url maxWidthSelector='.frontend-section'}}</div>
        {{markdown-convert content=image.description class='description markdown'}}
      </div>
    {{/with}}
  {{else}}
    <div class="message">This gallery is empty</div>
  {{/if}}
{{/if}}

{{#if (ui-not (ui-blank section.description))}}
  {{markdown-convert content=section.description class='description markdown'}}
{{/if}}
